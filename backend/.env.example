# Tennis Tracking API Environment Variables

# Application
APP_NAME=Tennis Tracking API
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Database
# For SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./tennis_tracking.db

# For PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/tennis_tracking

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=524288000  # 500MB in bytes
TEMP_DIR=./temp
OUTPUT_DIR=./output

# Computer Vision Models
TRACKNET_WEIGHTS_PATH=../WeightsTracknet/model.1
YOLO_WEIGHTS_PATH=../Yolov3/yolov3.weights
YOLO_CONFIG_PATH=../Yolov3/yolov3.cfg
YOLO_CLASSES_PATH=../Yolov3/coco.names

# Analysis Settings
VIDEO_PROCESSING_TIMEOUT=3600  # 1 hour in seconds
FRAME_RATE=30
COURT_DETECTION_CONFIDENCE=0.5
PLAYER_DETECTION_CONFIDENCE=0.6

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO

# Celery (if using distributed task processing)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# AWS S3 (for file storage in production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=tennis-tracking-videos
AWS_REGION=us-east-1

# External APIs
WEATHER_API_KEY=your-weather-api-key
TENNIS_DATA_API_KEY=your-tennis-data-api-key

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Development
RELOAD=true
WORKERS=1